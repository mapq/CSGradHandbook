      <colspec align="left" colnum="2" colname="c2" colwidth="4*"/>
      <colspec align="left" colnum="3" colname="c3" colwidth="4*"/>

      <thead>
        <row><entry>Year</entry><entry>Fall</entry><entry>Spring</entry></row>
      </thead>
